<?xml version="1.0" encoding="UTF-8"?>
<!--suppress ALL -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="net.virtalab.mvctools" />

    <!-- Catch all Controller-->
    <bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="defaultHandler" ref="defaultController" /><!-- Note that first letter is lower-cased -->
    </bean>

    <!-- ViewResolver -->
    <bean id="beanNameResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver" />
    <!-- View -->
    <bean id="out" class="net.virtalab.mvctools.render.AppOut" />
    <bean id="err" class="net.virtalab.mvctools.render.AppErr" />

</beans>